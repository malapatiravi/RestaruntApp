<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/custom_light_blue">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_light_blue">

        <EditText android:id="@+id/edit_text_email"
            android:layout_width="250dp"
            android:layout_marginTop="123dp"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:nextFocusDown="@+id/edit_text_password"
            android:padding="14dp"
            android:background="@color/custom_ghee"
            android:textColor="@color/custom_deep_blue"
            android:textColorHint="@color/custom_deep_blue_half_alpha"
            android:textSize="15.3sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/edit_text_password" />

        <EditText android:id="@+id/edit_text_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="14dp"
            android:background="@color/custom_ghee"
            android:textColor="@color/custom_deep_blue"
            android:textColorHint="@color/custom_deep_blue_half_alpha"
            android:textSize="15.3sp"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/edit_text_email"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnRegisterMe"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:textAllCaps="false"

            style="?android:attr/buttonStyleSmall"
            android:text="Sign In Zolhi"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/edit_text_password"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>