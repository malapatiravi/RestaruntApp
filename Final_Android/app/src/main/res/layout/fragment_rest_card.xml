<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_inner"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="@color/custom_ghee"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/movieIcon"
            android:transitionName="restaurantImageTransition"
            android:layout_marginRight="@dimen/activity_small_margin"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleMovie"
            android:layout_toRightOf="@id/movieIcon"
            android:textColor="@color/custom_orange"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:layout_toRightOf="@id/movieIcon"
            android:layout_below="@id/titleMovie"
            android:textColor="@color/custom_orange"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:text="(Open)"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/location"

            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_location_on_black_24dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categories"
            android:textColor="@color/custom_deep_blue"
            android:textSize="12dp"
            android:layout_toRightOf="@id/movieIcon"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:layout_below="@id/status"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minDelivery"
            android:layout_below="@id/categories"
            android:textColor="@color/custom_deep_blue"
            android:textSize="12dp"
            android:layout_toRightOf="@id/movieIcon"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryPrice"
            android:layout_below="@id/minDelivery"
            android:textColor="@color/custom_deep_blue"
            android:textSize="12dp"
            android:layout_toRightOf="@id/movieIcon"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:visibility="invisible"/>

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dispAddress"
            android:textSize="12dp"
            android:layout_toRightOf="@id/movieIcon"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:layout_below="@id/deliveryPrice"/>-->


    </RelativeLayout>
</android.support.v7.widget.CardView>
