<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_inner"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"

    card_view:cardBackgroundColor="@color/custom_ghee"
    card_view:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:padding="@dimen/activity_small_margin"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_name"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:textColor="@color/custom_orange"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_switch"
            android:layout_alignTop="@id/item_name"
            android:layout_alignParentRight="true"
            android:showText="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_price"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_below="@id/item_name"
            android:textColor="@color/custom_deep_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_desc"
            android:textSize="12dp"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_below="@id/item_price"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:textColor="@color/custom_deep_blue"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
