<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/custom_light_blue</item>
        <item name="colorPrimaryDark">@color/custom_deep_blue</item>
        <item name="colorAccent">@color/custom_orange</item>
    </style>
    <style name="HeaderTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/custom_orange</item>
        <item name="android:textSize">20dp</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/custom_light_blue</item>
        <item name="colorPrimaryDark">@color/custom_deep_blue</item>
        <item name="colorAccent">@color/custom_orange</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:windowContentTransitions">true</item>
    </style>

</resources>
